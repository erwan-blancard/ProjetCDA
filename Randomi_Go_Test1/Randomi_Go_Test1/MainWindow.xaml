<Window x:Class="Randomi_Go_Test1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Randomi_Go_Test1"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="900">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Exemples de contenu -->
            <StackPanel Name="OpponentHand" Grid.Row="0" Grid.Column="0"  Background="OrangeRed"/>
            <StackPanel Name="OpponentInfo" Grid.Row="0" Grid.Column="1"  Background="OrangeRed"/>
            <StackPanel Name="OpponentLife" Grid.Row="0" Grid.Column="2"  Background="OrangeRed">
                <TextBlock Name="OpponentLifeText" FontSize="20" Foreground="White" Margin="5" FontWeight="Bold" Text="Test" HorizontalAlignment="Left" VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel Name="OpponentName" Grid.Row="0" Grid.Column="3" Background="OrangeRed"/>

            <StackPanel Name="OpponentDiscard" Grid.Row="1" Grid.Column="0" Background="OrangeRed"/>
            <Button Name="Dice6" Grid.Row="1" Grid.Column="1" Content="Lancer le dé" Background="MediumPurple"/>
            <StackPanel Name="InfoPanel" Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Background="AliceBlue">
                <TextBlock Name="InfoPanelText" Text="Test" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="8"/>
            </StackPanel>




            <!--<Button Name="PauseMenu" Grid.Row="1" Grid.Column="3" Content="Pause" Background="LightGreen"/>-->

            <Button Name="HistoryMenu" Grid.Row="2" Grid.Column="0" Content="Historique" Background="Yellow"/>
            <StackPanel Grid.Row="2" Grid.Column="1"  Background="AliceBlue"/>
            <StackPanel Name="DeckPile" Grid.Row="2" Grid.Column="2" Background="Blue"/>
            <StackPanel Name="PlayerDiscard" Grid.Row="2" Grid.Column="3"  Background="SkyBlue" />

            <StackPanel Name="PlayerName" Grid.Row="3" Grid.Column="0"  Background="SkyBlue"/>
            <StackPanel Name="PlayerLife" Grid.Row="3" Grid.Column="1"  Background="SkyBlue">
                <TextBlock Name="PlayerLifeText" FontSize="20" Foreground="White" Margin="5" FontWeight="Bold" Text="Test" HorizontalAlignment="Left" VerticalAlignment="Center" />
            </StackPanel>
           
            <StackPanel Name="PlayerInfo" Grid.Row="3" Grid.Column="2"  Background="SkyBlue"/>
            <StackPanel Name="PlayerHand" Orientation="Vertical" Grid.Row="3" Grid.Column="3"  Background="SkyBlue"/>
        </Grid>

    </Grid>
    
</Window>
